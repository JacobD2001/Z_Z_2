<!DOCTYPE html>
<html>
<head>
  <title>Lista Klientów</title>
</head>
<body>
  <h1>Lista Klientów: <%= customers.length %></h1>
  <a href="/customers/add">Dodaj nowego klienta</a>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Company</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(function(customer) { %>
        <tr>
          <td><%= customer.CustomerId %></td>
          <td><%= customer.FirstName %></td>
          <td><%= customer.LastName %></td>
          <td><%= customer.Company %></td>
          <td>
            <a href="/customer/<%= customer.CustomerId %>">Zobacz szczegóły</a> |
            <a href="/customer/edit/<%= customer.CustomerId %>">Edytuj</a> |
            <form action="/customer/delete/<%= customer.CustomerId %>" method="post" style="display:inline;">
              <button type="submit" onclick="return confirm('Czy na pewno chcesz usunąć tego klienta?');">Usuń</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
